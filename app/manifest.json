{
  "name": "__MSG_appName__",
  "version": "0.1.1",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/chromereload.js",
      "scripts/background.js"
    ]
  },
  "web_accessible_resources": [
    "angular/angular-1.4.2.js",
    "angular/angular-1.4.1.js",
    "angular/angular-1.4.0.js",
    "angular/angular-1.3.6.js",
    "angular/angular-1.3.5.js",
    "angular/angular-1.3.4.js",
    "angular/angular-1.3.3.js",
    "angular/angular-1.3.2.js",
    "angular/angular-1.3.1.js",
    "angular/angular-1.3.0.js"
  ],
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "webNavigation",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "scripts/contentscript.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "devtools_page": "devtools.html",
  "options_page": "options.html"
}